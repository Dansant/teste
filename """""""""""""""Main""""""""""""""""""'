using System;
using System.IO;
namespace ConsoleApp7
{

    class Program
    {

        static void Main(string[] args)
        {
            bool menu = true;
            while (menu)
            {
                Menu.Men();
                int escolha = int.Parse(Console.ReadLine());
                switch (escolha)
                {
                    case 0:
                        menu = false;
                        break;
                    case 1://adicionar
                        Console.WriteLine("Insira a quantidade de carros que você deseja cadastrar:");
                        int quantidade = int.Parse(Console.ReadLine());
                        while (quantidade < 0)
                        {
                            Console.WriteLine("Número inválido");
                            Console.WriteLine("Insira a quantidade de carros que você deseja cadastrar:");
                            quantidade = int.Parse(Console.ReadLine());
                        }
                        Carro[] carro = new Carro[quantidade];
                        for (int i = 0; i < quantidade; i++)
                        {
                            carro[i] = new Carro();
                        }
                        for (int i = 0; i < quantidade; i++)
                        {
                            Console.WriteLine("Informe a marca:");
                            carro[i].Marca = Console.ReadLine();
                            Console.WriteLine("Informe o modelo:");
                            carro[i].Modelo = Console.ReadLine();
                            Console.WriteLine("Insira a placa");
                            carro[i].Placa = Console.ReadLine();
                            Console.WriteLine("Insira o nome do carro:");
                            carro[i].Nome = Console.ReadLine();
                            Console.WriteLine("Digite o código de cadastro:");
                            carro[i].Codigo = int.Parse(Console.ReadLine());
                            while (carro[i].Codigo < 0)
                            {
                                Console.WriteLine("Inválido!");
                                Console.WriteLine("Digite o código de cadastro:");
                                carro[i].Codigo = int.Parse(Console.ReadLine());
                            }
                            while (Carro.VerificarCodigo(carro[i].Codigo))
                            {
                                Console.WriteLine("Código existente!");
                                Console.WriteLine("Digite novamente o código de cadastro:");
                                carro[i].Codigo = int.Parse(Console.ReadLine());
                            }
                        }
                        Carro.Adicionar(carro);
                        Console.WriteLine("Digite qualquer coisa para avançar");
                        Console.ReadLine();
                        Console.Clear();
                        break;
                    case 2://pesquisar
                        Console.WriteLine("Insira O codigo do carro que você deseja pesquisar:");
                        int codigo = int.Parse(Console.ReadLine());
                        while (codigo < 0)
                        {
                            Console.WriteLine("Inválido!");
                            Console.WriteLine("Insira O codigo do carro que você deseja pesquisar:");
                            codigo = int.Parse(Console.ReadLine());
                        }
                        Carro.Pesquisar(codigo);
                        break;
                    case 3://consultar disponibilidade
                        Console.WriteLine("Digite o codigo do carro que você deseja consultar a disponibilidade:");
                        int disponivbilidade = int.Parse(Console.ReadLine());
                        while (disponivbilidade < 0)
                        {
                            Console.WriteLine("Inválido.");
                            Console.WriteLine("Digite o codigo do carro que você deseja consultar a disponibilidade:");
                            disponivbilidade = int.Parse(Console.ReadLine());
                        }
                        Carro.Consultar(disponivbilidade);
                        break;
                    case 4://alterar status do carro
                        Console.WriteLine("Digite o codigo do carro que você deseja alterar:");
                        int alterar = int.Parse(Console.ReadLine());
                        while (alterar < 0)
                        {
                            Console.WriteLine("Inválido.");
                            Console.WriteLine("Digite o codigo do carro que você deseja alterar:");
                            alterar = int.Parse(Console.ReadLine());
                        }
                        break;
                    case 5://excluir carro
                        Console.WriteLine("Digite o codigo do carro que você deseja excluir:");
                        int excluir = int.Parse(Console.ReadLine());
                        while (excluir < 0)
                        {
                            Console.WriteLine("Inválido.");
                            Console.WriteLine("Digite o codigo do carro que você deseja excluir:");
                            excluir = int.Parse(Console.ReadLine());
                        }
                        break;
                    default:
                        Console.WriteLine("Número inválido!");
                        break;
                }
            }
        }
    }
}
