using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication24
{
    class Program
    {
        static void Main(string[] args)
        {
            double numero;
            double fatorial;
            double i;
            double numb;
            double fat;
            double p;
            double comb = 0;
            double n;
            double fat2;
            double nn;
            Console.WriteLine("Entre com o primeiro número da combinação:");
            numero = double.Parse(Console.ReadLine());
            fatorial = numero;
            for (i = numero - 1; i > 1; i--)
            {
                fatorial *= i;
            }
            Console.WriteLine("Entre com o segundo número da combinação:");
            numb = double.Parse(Console.ReadLine());
            fat = numb;
            for (p = numb - 1; p > 1; p--)
            {
                fat *= p;
            }
            n = numero - numb;
            fat2 = n;
            for (nn = n - 1; nn > 1; nn--)
            {
                fat2 *= nn;
            }
            comb = fatorial/(fat*fat2);
            Console.WriteLine("Valor da primeira:" + fatorial);
            Console.WriteLine("valor da segunda:"+fat);
            Console.WriteLine("Valor da terceira:" + fat2);
            Console.WriteLine("VALOR DA COMBINAÇÃO:" + comb);
            Console.ReadKey();
        }
    }
}
